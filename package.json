{
  "name": "Tutorial",
  "version": "1.0.0",
  "description": "Solidity Tutorial with Ganache eth emulation and web3 library. To start write npm --dir <name> start  to start /src/<name>/index.js script",
  "author": "Artur (Seti) Łabudziński",
  "license": "MIT",
  "url": "https://github.com/Setitch/solidity-tutorial",
  "scripts": {
